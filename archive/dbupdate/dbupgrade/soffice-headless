
start() {
   echo "Starting OpenOffice in headless mode"
   soffice -headless -accept="socket,host=127.0.0.1,port=8100;urp;" -nofirststartwizard
}

stop() {
  echo "Stopping OpenOffice service"
  while [ -n "$(pgrep soffice)" ]
  do
   kill $(pgrep soffice)
   sleep 5
  done
}

case "$1" in 
start) start;;
stop)  stop;;
restart) stop; start;;
esac

